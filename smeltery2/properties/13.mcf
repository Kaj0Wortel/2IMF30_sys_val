nu X(PourFurnace: Bool=false, CartLocation: Nat -> Nat= cartInit) . 
	[pourFurnace(true)]X(true, CartLocation) &&
	[pourFurnace(false)]X(false, CartLocation) &&
	forall c1: Nat . val(c1<4) => forall r: Nat . val(r<8) => [cartAtRail(c1,rail(r))]X(PourFurnace, CartLocation[c1->r]) &&
	forall c2: Nat . val(c2<4) => [moveCartForward(c2)||moveCartBackward(c2)] val(CartLocation(c2)!=1 || !PourFurnace) &&
	forall n : Nat . val(n<4) => forall m: Nat . val(m<8) => forall b: Bool . [!(pourFurnace(b)||cartAtRail(n,rail(m))||moveCartForward(n)||moveCartBackward(n))]X(PourFurnace, CartLocation)