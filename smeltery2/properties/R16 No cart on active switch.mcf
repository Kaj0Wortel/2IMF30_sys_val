nu X(cartLocation: Nat -> Nat = cartInit) .
	( forall c: Nat . val(c < 4) => forall r: Nat . val(r <= 8) => [cartAtRail(c, rail(r))] X(cartLocation[c -> r]) ) &&
	( forall c: Nat . val(c < 4) => forall s: Nat . val(s < 3) => [switchRail(s)] val(cartLocation(c) != 2) && X(cartLocation) ) &&
	( forall c: Nat . val(c < 4) => forall r: Nat . val(r <= 8) => forall s: Nat . val(s < 3) => [!(cartAtRail(c, rail(r)) || switchRail(s))] X(cartLocation) )