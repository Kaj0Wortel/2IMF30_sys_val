nu X(cartLocation: Nat -> Nat = cartInit) .
	( forall c1: Nat . val(c1 < 4) => forall r1: Nat . val(r1 <= 8) => [cartAtRail(c1, rail(r1))] X(cartLocation[c1 -> r1]) ) &&
	( forall c2: Nat . val(c2 < 4) => forall s2: Nat . val(s2 < 3) => [switchRail(s2)] val(cartLocation(c2) != 2) && X(cartLocation) ) &&
	( forall c3: Nat . val(c3 < 4) => forall r3: Nat . val(r3 <= 8) => forall s3: Nat . val(s3 < 3) => [!(cartAtRail(c3, rail(r3)) || switchRail(s3))] X(cartLocation) )