nu X(CartLocation: Nat -> Nat=cartInit, CartMaintenance: Nat -> Bool = initBool(false)) . 
	( forall c: Nat . val(c < 4) => forall r: Nat . val(r <= 8) => [cartAtRail(c, rail(r))] ( X(CartLocation[c -> r], CartMaintenance) ) ) &&
	( forall c: Nat . val(c < 4) => [cartRequestMaintenance(c)] ( X(CartLocation, CartMaintenance[c -> true]) ) ) &&
	( forall c: Nat . val(c < 4) => [cartUp(c)] ( X(CartLocation, CartMaintenance[c -> false]) ) ) &&
	( [pourFurnace(true)] !(exists c: Nat . val(c < 4 && CartLocation(c) == 1 && CartMaintenance(c))) && X(CartLocation, CartMaintenance) ) &&
	( forall c: Nat . val(c < 4) => forall r: Nat . val(r <= 8) => [!cartAtRail(c, rail(r)) && !cartRequestMaintenance(c) && !cartUp(c) && !pourFurnace(true)] ( X(CartLocation, CartMaintenance) ) )
