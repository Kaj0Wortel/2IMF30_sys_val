nu X(openRequests: Int = 0, filledCarts: Int = 0) . 
	(forall r: Nat . [requestIron(r)] X(openRequests + 1, filledCarts)) &&
	(forall r: Nat . [requestDone(r)] X(openRequests - 1, filledCarts)) &&
	(forall c: Nat . [cartFull(c)]  X(openRequests, filledCarts + 1)) &&
	(forall c: Nat . [cartEmpty(c)] X(openRequests, filledCarts - 1)) &&
	([pourFurnace(true)] val(openRequests >= filledCarts) && X(openRequests, filledCarts)) &&
	(forall n: Nat . [!(requestIron(n) || requestDone(n) || cartFull(n) || cartEmpty(n) || pourFurnace(true))] X(openRequests, filledCarts))